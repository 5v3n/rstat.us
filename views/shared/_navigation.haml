- if current_user.nil?
  - nav = [{:url => "/updates", :name => "World"}]
- else
  - nav = [{:url => "/timeline", :name => "Timeline"}, {:url => "/replies", :name => "Replies"}, {:url => "/updates", :name => "World"}]
- unless @hashtag.nil?
  - nav << {:url => "/hashtags/#{@hashtag}", :name => "##{@hashtag}"}
#navigation
  %ul
    - nav.each do |item|
      %li{:class => request.path_info == item[:url] ? "active" : ""}
        %a{:href => item[:url], :id => "tab-#{item[:name].downcase}" }
          = item[:name]
