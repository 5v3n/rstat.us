%h1 Search Updates

%form#search-form.search{:action => "search", :method => "GET", :name => "search_form"}
  %input#search-input{:name => "q", :type => "text"}
  %input#search-button.button{:type => "submit", :value => "Search"}

#search.updates
  != haml :"updates/_list", :locals => {:updates =>  @updates, :tagline => "No statuses match your search."}
  %nav.pagination
    - unless @prev_page.nil?
      %a.button{:href => @prev_page, :id => "prev_button"}
        &laquo; Previous

    - unless @next_page.nil?
      %a.button{:href => @next_page, :id => "next_button"}
        Next &raquo;
